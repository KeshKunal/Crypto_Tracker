<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.GridPane?>

<GridPane hgap="10" vgap="10" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.AddCoinController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <Label text="Coin ID:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
    <TextField fx:id="coinIdField" GridPane.columnIndex="1" GridPane.rowIndex="0" promptText="e.g., cardano" />

    <Label text="Amount:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
    <TextField fx:id="amountField" GridPane.columnIndex="1" GridPane.rowIndex="1" promptText="e.g., 100.5" />

    <HBox spacing="10" alignment="BOTTOM_RIGHT" GridPane.columnIndex="1" GridPane.rowIndex="2">
        <Button fx:id="okButton" text="OK" onAction="#handleOk" />
        <Button fx:id="cancelButton" text="Cancel" onAction="#handleCancel" />
    </HBox>

</GridPane>